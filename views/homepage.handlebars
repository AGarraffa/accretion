              <button class="button-1" role="button">LOGIN</button>

          
        </form>
      </div>

      <div class="home-login-container">
        <form>
          <h2 class="text">SIGN UP</h2>
          <input type="text" class="first-name" placeholder="FIRST NAME" />
          <input type="text" class="last-name" placeholder="LAST NAME" />
          <input type="text" class="office" placeholder="OFFICE" />
          <input type="text" class="email" placeholder="EMAIL" />
          <input type="password" class="password" placeholder="PASSWORD" />

              <button class="button-1" role="button">SIGN UP</button>

        </form>
      </div>

    </div>

  </header>

</div>