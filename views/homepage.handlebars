<video playsinline autoplay muted loop poster="" id="bgvid">
  <source src="../assets/images/homepage-video.mp4" type="video/mp4" />
</video>

<div class="view">

  <header class="homepage-logo">

    <img class="square-home" src="../assets/images/usgs-image-small.jpg" />
    <img
      class="logo"
      src="../assets/images/usgs_logo.png"
      alt="USGS logo white"
    />

    <img class="square-home1" src="../assets/images/usgs-image1-small.jpg" />
    <button id="loginBtn" class="button-1" role="button">LOGIN</button>

    <img class="square-home2" src="../assets/images/usgs-image2-small.jpg" />
